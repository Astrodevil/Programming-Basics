#include <iostream>
using namespace std;

int main()
{

	int N = 12;

	int s = N / 2;
	int t = s;


	for (int i = 0; i < N; i++) {

		if (i > s) {

			for (int j = 0; j < s; j++)
				cout << " ";
		}
		else {

			for (int j = 0; j < i; j++)
				cout << " ";

			cout << "*";

			for (int k = 0; k < 2 * t; k++)
				cout << " ";

			t--;
		}

		cout << " *" << endl;
	}

	return 0;
}
